{
  "manifest_version": 3,
  "name": "Ahgora Tools - Suite de Ferramentas",
  "version": "1.0.0",
  "description": "Suite de ferramentas: Auto Puxa Chat Zendesk, Clonar Perfis PontoWeb e Trocar Base Ahgora | Copyright Â© Delean Mafra | CC BY-NC 4.0",
  "author": "Delean Mafra",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*.zendesk.com/*",
    "*://*.ahgora.com.br/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.zendesk.com/*"],
      "js": ["content-zendesk.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.ahgora.com.br/*", "<all_urls>"],
      "js": ["content-perfil.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
